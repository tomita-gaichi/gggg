<h3>スケジュール編集</h3>
<%=render"shared/error",obj:@user%>
<%=form_for @user do |f|%>
<table>
  <tr>
    <th><%=f.label :title,"タイトル"%></th>
    <td><%=f.text_field :title%></td>
  </tr>
  <tr>
    <th><%=f.label :start_date,"開始日"%></th>
    <td><%=f.date_field :start_date%></td>
  </tr>
  <tr>
    <th><%=f.label :end_date,"終了日"%></th>
    <td><%=f.date_field :end_date%></td>
  </tr>
  <tr>
    <th><%=f.label :check,"終日"%></th>
    <td class="check"><%=f.check_box :check%><br>終日の場合はチェックを入れます</td>
  </tr>
  <tr>
    <th><%=f.label :introduction,"スケジュールメモ"%></th>
    <td><%=f.text_area :introduction%></td>
  </tr>
</table>
<div>
  <ul>
    <li><%=f.submit"スケジュールの編集を完了する"%></li>
    <li><%=link_to"スケジュール情報一覧に戻る",:users%></li>
  </ul>
</div>
<%end%>
